<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="#fff">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_logo" />

    </RelativeLayout>

    <ImageView
        android:backgroundTint="#649FF8"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/relativeLayout"
        android:layout_marginTop="-20dp"
        android:background="@drawable/waves" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Verify Your number ?"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#576781" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView

            android:layout_marginLeft="224dp"
            android:text="Select Country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <View
            android:layout_marginTop="10dp"
            android:background="#D5D6DD"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <Spinner
            android:layout_marginLeft="20dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:id="@+id/spinnerCountries"
            android:layout_width="300dp"
            android:layout_height="24dp" />
        <View
            android:layout_marginTop="10dp"
            android:background="#D5D8E9"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

       <!-- <EditText
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:digits="0123456789"
            android:hint="Enter your number"
            android:maxLength="10" />-->


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#F0EEEE"
            android:weightSum="1" >

            <TextView

                android:textColor="#127FAF"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Phone \nNumber" />

            <EditText


                android:id="@+id/editTextPhone"
                android:digits="0123456789"
                android:hint="Enter your number"
                android:maxLength="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight=".75" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="16dp"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/buttonContinue"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/vv"
        android:text="Let's Go"
        android:textAllCaps="false"
        android:textColor="#5E5F68" />

</RelativeLayout>